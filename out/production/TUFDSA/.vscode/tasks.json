{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Current Java File with IO",
      "type": "shell",
      "command": "javac \"${file}\" && java ${fileBasenameNoExtension} < input.txt > output.txt",
      "options": {
        "shell": {
          "executable": "C:\\Windows\\System32\\cmd.exe",
          "args": ["/c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "clear": true
      },
      "problemMatcher": {
        "owner": "java",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*\\.java):(\\d+):\\s+(error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
        
      }
      
    }
    
  ]
  
}
